{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "moduleResolution": "node",
      "jsx": "react",
      "outDir": "build",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "watch": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
  },
  "filesGlob": [
      "src/**/*.ts",
      "src/**/*.tsx"
  ],
  "exclude": [
      "index.android.js",
      "index.ios.js",
      "build",
      "node_modules"
  ]
}